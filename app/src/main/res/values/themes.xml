<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Theme.KLangPJ" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:fontFamily">@font/pretendard_regular</item>

        <item name="backgroundColor">@color/blue_50</item>
        <item name="colorOnBackground">@color/dark_900</item>

        <!-- Primary brand color (앱의 주요 파란색) -->
        <item name="colorPrimary">@color/blue_500</item> <!-- 진행바, 주요 버튼 색상 -->
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/point_ivory</item> <!-- 파란색 위의 텍스트 -->


        <!--주요 배경 관련색-->
        <item name="colorSurface">@color/blue_50</item>
        <item name="colorSurfaceVariant">@color/blue_50</item>
        <item name="colorContainer">@color/blue_50</item>

        <!-- Background colors -->

        <item name="android:windowBackground">@color/blue_50</item> <!-- 전체 배경색 -->
        <item name="android:colorBackground">@color/blue_50</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@color/point_ivory</item>
        <item name="android:windowLightStatusBar">true</item> <!-- 상태바 아이콘 어둡게 -->

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_900</item> <!-- 주요 텍스트 -->
        <item name="android:textColorSecondary">@color/dark_500</item> <!-- 부가 텍스트 -->
    </style>

    <!-- 프로그레스 서클 스타일 -->
    <style name="CircularProgress" parent="Widget.Material3.CircularProgressIndicator">
        <item name="trackColor">@color/blue_100</item> <!-- 연한 파란색 트랙 -->
        <item name="indicatorColor">@color/blue_500</item> <!-- 진한 파란색 프로그레스 -->
    </style>

    <!-- 하단 네비게이션 스타일 -->

    <style name="Widget.App.BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/bottom_nav_text_selector</item>
        <item name="itemTextColor">@color/bottom_nav_text_selector</item>
        <item name="backgroundColor">@color/point_ivory</item>
    </style>

    <style name="BoldWord" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/prtendard_bold</item>
    </style>


</resources>
