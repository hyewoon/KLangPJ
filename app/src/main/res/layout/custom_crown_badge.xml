<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/reward_on"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/reward_count"
        android:contentDescription="Crown Icon"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/reward_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="50"
        android:paddingStart="@dimen/third_margin"
        android:paddingEnd="@dimen/second_margin"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="12sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>